@{
    ViewData["Title"] = ViewBag.Title ?? "Kết quả thanh toán";
    var isSuccess = ViewBag.IsSuccess ?? false;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm text-center">
                <div class="card-body p-5">
                    @if (isSuccess)
                    {
                        <div class="text-success mb-4">
                            <i class="bi bi-check-circle-fill" style="font-size: 5rem;"></i>
                        </div>
                        <h2 class="text-success mb-3">@ViewBag.Title</h2>
                        <p class="lead mb-4">@ViewBag.Message</p>

                        <div class="alert alert-success">
                            <div class="mb-2"><strong>Mã thanh toán:</strong> @ViewBag.PaymentId</div>
                            <div><strong>Mã đặt chỗ:</strong> @ViewBag.BookingCode</div>
                        </div>

                        <p class="text-muted mb-4">
                            Cảm ơn bạn đã sử dụng dịch vụ! Vui lòng đến trạm sạc đúng giờ.
                        </p>

                        <div class="d-grid gap-2">
                            <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="bi bi-journal-text"></i> Xem đặt chỗ của tôi
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-house"></i> Về trang chủ
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning mb-4">
                            <i class="bi bi-exclamation-triangle-fill" style="font-size: 5rem;"></i>
                        </div>
                        <h2 class="text-warning mb-3">@ViewBag.Title</h2>
                        <p class="lead mb-4">@ViewBag.Message</p>

                        <div class="alert alert-warning">
                            <strong>Mã thanh toán:</strong> @ViewBag.PaymentId
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-clockwise"></i> Thử thanh toán lại
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-house"></i> Về trang chủ
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
