@using Microsoft.AspNetCore.Identity
@using EVCS.Models.Identity
@using EVCS.Utility
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg border-bottom bg-body sticky-top" aria-label="Main navigation">
    <div class="container-xxl">
        <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
            <i class="bi bi-ev-station text-primary"></i><span class="fw-semibold">EVCS</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav"
                aria-controls="topnav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="topnav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Stations" asp-action="Map">
                        <i class="bi bi-map"></i> Bản đồ trạm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Stations" asp-action="List">
                        <i class="bi bi-list-ul"></i> Danh sách trạm
                    </a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Bookings" asp-action="Index">
                            <i class="bi bi-calendar-check"></i> Đặt chỗ của tôi
                        </a>
                    </li>
                }

                @if (SignInManager.IsSignedIn(User) && User.IsInRole(SD.RoleAdmin))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear"></i> Quản trị
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Stations" asp-action="Index">Trạm sạc</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="BookingPolicy" asp-action="Index">Chính sách đặt chỗ</a></li>
                        </ul>
                    </li>
                }
            </ul>

            <div class="d-flex align-items-center gap-2">
                <div class="btn-group" role="group" aria-label="Dark mode">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-theme-value="auto" aria-label="Auto theme"><i class="bi bi-circle-half"></i></button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-theme-value="light" aria-label="Light theme"><i class="bi bi-brightness-high"></i></button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-theme-value="dark" aria-label="Dark theme"><i class="bi bi-moon"></i></button>
                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity?.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person"></i> Thông tin tài khoản
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                    <i class="bi bi-key"></i> Đổi mật khẩu
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="px-3" method="post" asp-controller="Account" asp-action="Logout">
                                    @Html.AntiForgeryToken()
                                    <button class="dropdown-item text-danger" type="submit">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                    </a>
                    <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                        <i class="bi bi-person-plus"></i> Đăng ký
                    </a>
                }
            </div>
        </div>
    </div>
</nav>
