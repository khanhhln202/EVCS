@using EVCS.Models.Enums
@model IEnumerable<EVCS.Services.DTOs.BookingListItemDto>

@{
    ViewData["Title"] = "Đặt chỗ của tôi";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="bi bi-bookmark-check me-2"></i>Đặt chỗ của tôi
    </h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Bạn chưa có đặt chỗ nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã đặt chỗ</th>
                        <th>Trạm sạc</th>
                        <th>Loại</th>
                        <th>Khung giờ</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Số tiền</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td class="fw-bold">@booking.BookingCode</td>
                            <td>@booking.StationName</td>
                            <td>
                                <span class="badge bg-@(booking.BookingType == BookingType.QuickHold ? "primary" : "info")">
                                    @(booking.BookingType == BookingType.QuickHold ? "Giữ chỗ nhanh" : "Đặt trước")
                                </span>
                            </td>
                            <td>@booking.HoldWindowText</td>
                            <td>
                                @{
                                    var (statusText, statusColor) = booking.BookingStatus switch
                                    {
                                        BookingStatus.Pending => ("Chờ thanh toán", "warning"),
                                        BookingStatus.Confirmed => ("Đã xác nhận", "success"),
                                        BookingStatus.Active => ("Đang hoạt động", "primary"),
                                        BookingStatus.Completed => ("Hoàn thành", "info"),
                                        BookingStatus.Cancelled => ("Đã hủy", "danger"),
                                        BookingStatus.Expired => ("Đã hết hạn", "secondary"),
                                        _ => ("Không xác định", "secondary")
                                    };
                                }
                                <span class="badge bg-@statusColor">
                                    @statusText
                                </span>
                            </td>
                            <td>
                                @{
                                    var (paymentText, paymentColor) = booking.PaymentStatus switch
                                    {
                                        PaymentStatus.Created => ("Chờ thanh toán", "warning"),
                                        PaymentStatus.Pending => ("Đang xử lý", "info"),
                                        PaymentStatus.Paid => ("Đã thanh toán", "success"),
                                        PaymentStatus.Failed => ("Thất bại", "danger"),
                                        PaymentStatus.Expired => ("Hết hạn", "secondary"),
                                        PaymentStatus.Refunded => ("Đã hoàn tiền", "primary"),
                                        _ => ("Không xác định", "secondary")
                                    };
                                }
                                <span class="badge bg-@paymentColor">
                                    @paymentText
                                </span>
                            </td>
                            <td class="fw-bold text-success">
                                @booking.Amount.ToString("N0") @booking.Currency
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@booking.Id" 
                                       class="btn btn-outline-primary"
                                       title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    
                                    @if (booking.BookingStatus == BookingStatus.Pending && 
                                         booking.PaymentStatus == PaymentStatus.Created)
                                    {
                                        <a href="#" 
                                           class="btn btn-outline-success"
                                           title="Thanh toán ngay">
                                            <i class="bi bi-credit-card"></i>
                                        </a>
                                    }
                                    
                                    @if (booking.BookingStatus == BookingStatus.Pending || 
                                         booking.BookingStatus == BookingStatus.Confirmed)
                                    {
                                        <button type="button" 
                                                class="btn btn-outline-danger"
                                                data-bs-toggle="modal" 
                                                data-bs-target="#cancelModal-@booking.Id"
                                                title="Hủy đặt chỗ">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination (nếu cần) -->
        <nav aria-label="Booking pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <span class="page-link">Tổng: @Model.Count() đặt chỗ</span>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modal xác nhận hủy cho từng booking -->
@foreach (var booking in Model)
{
    <div class="modal fade" id="cancelModal-@booking.Id" tabindex="-1" aria-labelledby="cancelModalLabel-@booking.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel-@booking.Id">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                        Xác nhận hủy đặt chỗ
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn hủy đặt chỗ <strong>@booking.BookingCode</strong>?</p>
                    <div class="alert alert-warning small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        <strong>Lưu ý:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Hành động này không thể hoàn tác</li>
                            <li>Phí đặt chỗ sẽ được hoàn lại theo chính sách</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x me-1"></i>Đóng
                    </button>
                    <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Xác nhận hủy
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Confirm before cancel
        $('form[action*="Cancel"]').on('submit', function(e) {
            if (!confirm('Bạn có chắc chắn muốn hủy đặt chỗ này?')) {
                e.preventDefault();
            }
        });
    </script>
}