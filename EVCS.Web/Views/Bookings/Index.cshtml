@model List<EVCS.Services.DTOs.BookingListItemDto>
@using EVCS.Models.Enums
@{
    ViewData["Title"] = "Lịch sử Đặt chỗ";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="text-center p-4 text-body-secondary">
                <i class="bi bi-journal-x" style="font-size: 3rem;"></i>
                <p class="mt-2">Bạn chưa có đặt chỗ nào.</p>
                <a asp-controller="Stations" asp-action="List" class="btn btn-primary">
                    <i class="bi bi-search"></i> Tìm trạm sạc ngay
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã Đặt chỗ</th>
                            <th>Loại</th>
                            <th>Trạm sạc</th>
                            <th>Thời gian</th>
                            <th>Số tiền</th>
                            <th>Trạng thái</th>
                            <th>Thanh toán</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.BookingCode</strong></td>
                                <td>
                                    <span class="badge @(item.BookingType == BookingType.QuickHold ? "bg-warning text-dark" : "bg-info")">
                                        @(item.BookingType == BookingType.QuickHold ? "Nhanh" : "Trước")
                                    </span>
                                </td>
                                <td>@item.StationName</td>
                                <td class="small">@item.HoldWindowText</td>
                                <td><strong>@item.Amount.ToString("N0") @item.Currency</strong></td>
                                <td>
                                    @if (item.BookingStatus == BookingStatus.Confirmed)
                                    {
                                        <span class="badge bg-success">Đã xác nhận</span>
                                    }
                                    else if (item.BookingStatus == BookingStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                    }
                                    else if (item.BookingStatus == BookingStatus.Cancelled)
                                    {
                                        <span class="badge bg-secondary">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.BookingStatus</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PaymentStatus == PaymentStatus.Paid)
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                    }
                                    else if (item.PaymentStatus == PaymentStatus.Created)
                                    {
                                        <span class="badge bg-info text-dark">Chờ</span>
                                    }
                                    else if (item.PaymentStatus == PaymentStatus.Expired)
                                    {
                                        <span class="badge bg-danger">Hết hạn</span>
                                    }
                                    else if (item.PaymentStatus == PaymentStatus.Failed)
                                    {
                                        <span class="badge bg-danger">Thất bại</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.PaymentStatus</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.BookingStatus == BookingStatus.Pending && item.PaymentStatus != PaymentStatus.Expired)
                                    {
                                        <a asp-controller="Payment" asp-action="Pay" asp-route-bookingId="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-credit-card"></i> Thanh toán
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>