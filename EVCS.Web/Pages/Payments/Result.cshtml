@page "/Payments/Result/{id:guid}"
@model EVCS.Web.Pages.Payments.ResultModel
@{
    ViewData["Title"] = "Thanh toán thành công";
}
<div class="alert alert-success">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-check2-circle fs-5"></i>
    <div>
      <div class="fw-semibold">Thanh toán thành công</div>
      <div class="small">Mã đặt chỗ: @Model.BookingCode</div>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <dl class="row small mb-0">
      <dt class="col-sm-3">Trạm</dt><dd class="col-sm-9">@Model.StationName</dd>
      <dt class="col-sm-3">Cổng</dt><dd class="col-sm-9">#@Model.PortIndex (@Model.ChargerType - @Model.PowerKw)</dd>
      <dt class="col-sm-3">Thời gian giữ chỗ</dt><dd class="col-sm-9">@Model.HoldWindowText</dd>
      <dt class="col-sm-3">Số tiền</dt><dd class="col-sm-9">@Model.AmountText</dd>
    </dl>
    <div class="mt-3">
      <a class="btn btn-primary" asp-controller="Stations" asp-action="List"><i class="bi bi-list-ul"></i> Quay lại danh sách trạm</a>
    </div>
  </div>
</div>