@model EVCS.Services.DTOs.BookingPolicyDto
@{
    ViewData["Title"] = "Chính sách đặt chỗ";
}
<div class="row g-3">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">@ViewData["Title"]</h5>
                <form method="post" class="row g-3" novalidate>
                    <input type="hidden" asp-for="Id" />
                    <div class="col-md-4"><label asp-for="AcDeposit" class="form-label"></label><div class="input-group"><span class="input-group-text">₫</span><input asp-for="AcDeposit" class="form-control" /></div><div class="form-text">Cọc cho cổng AC</div></div>
                    <div class="col-md-4"><label asp-for="DcDeposit" class="form-label"></label><div class="input-group"><span class="input-group-text">₫</span><input asp-for="DcDeposit" class="form-control" /></div><div class="form-text">Cọc cho cổng DC</div></div>
                    <div class="col-md-4"><label asp-for="HoldMinutes" class="form-label"></label><input asp-for="HoldMinutes" class="form-control" /><div class="form-text">Giữ chỗ (phút)</div></div>
                    <div class="col-md-4"><label asp-for="CancelFullRefundMinutes" class="form-label"></label><input asp-for="CancelFullRefundMinutes" class="form-control" /><div class="form-text">Hoàn 100% nếu huỷ trước (phút)</div></div>
                    <div class="col-md-4"><label asp-for="CancelPartialRefundMinutes" class="form-label"></label><input asp-for="CancelPartialRefundMinutes" class="form-control" /><div class="form-text">Mốc hoàn một phần (phút)</div></div>
                    <div class="col-md-4"><label asp-for="NoShowPenaltyPercent" class="form-label"></label><div class="input-group"><input asp-for="NoShowPenaltyPercent" class="form-control" /><span class="input-group-text">%</span></div><div class="form-text">Phạt vắng mặt</div></div>
                    <div class="col-12"><button class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h6>Gợi ý</h6>
                <ul class="small text-body-secondary mb-0">
                    <li>AC: 30.000₫ • DC: 50.000₫</li>
                    <li>Hold: 15 phút • No-show: 100%</li>
                </ul>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}