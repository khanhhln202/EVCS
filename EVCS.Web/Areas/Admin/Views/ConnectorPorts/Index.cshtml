@using EVCS.Services.DTOs
@model EVCS.Web.ViewModels.PagedResult
@{
    var items = (IEnumerable<ConnectorPortUpsertDto>)ViewBag.Items; var chargerId = (Guid)ViewBag.ChargerId; ViewData["Title"] = "Cổng sạc";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create" asp-route-chargerId="@chargerId"><i class="bi bi-plus-lg"></i> Thêm cổng</a>
</div>
@if (!items.Any())
{
    <div class="alert alert-info"><i class="bi bi-info-circle"></i> Chưa có cổng sạc.</div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead><tr><th>#</th><th>Đầu nối</th><th>kW tối đa</th><th>Giá/kWh</th><th>Trạng thái</th><th class="text-end">Hành động</th></tr></thead>
            <tbody>
                @foreach (var p in items)
                {
                    <tr>
                        <td>@p.IndexNo</td>
                        <td>@p.ConnectorType</td>
                        <td>@p.MaxPowerKw</td>
                        <td>@p.DefaultPricePerKwh.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                        <td><span class="badge @(p.Status == EVCS.Models.Enums.ConnectorPortStatus.Available ? "text-bg-success" : "text-bg-secondary")">@p.Status</span></td>
                        <td class="text-end">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil"></i> Sửa</a>
                            <form id="form-del-@p.Id" asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@p.Id" />
                                <input type="hidden" name="chargerId" value="@chargerId" />
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-form="form-del-@p.Id"><i class="bi bi-trash"></i> Xoá</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
}
@await Html.PartialAsync("_ConfirmDeleteModal")