@using EVCS.Models.Enums
@model EVCS.Services.DTOs.BookingManagementListDto
@{
    ViewData["Title"] = "Quản lý đặt chỗ";
    var filter = ViewBag.Filter as EVCS.Services.DTOs.BookingFilterDto;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
        <i class="bi bi-calendar-check"></i> @ViewData["Title"]
    </h4>
    <div>
        <span class="badge bg-secondary">Tổng: @Model.TotalCount</span>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4" id="stats-cards">
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-warning mb-2"><i class="bi bi-clock-history fs-3"></i></div>
                <div class="fw-bold" id="stat-pending">-</div>
                <small class="text-muted">Chờ xác nhận</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-primary mb-2"><i class="bi bi-check-circle fs-3"></i></div>
                <div class="fw-bold" id="stat-confirmed">-</div>
                <small class="text-muted">Đã xác nhận</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-success mb-2"><i class="bi bi-check2-all fs-3"></i></div>
                <div class="fw-bold" id="stat-completed">-</div>
                <small class="text-muted">Hoàn thành</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-danger mb-2"><i class="bi bi-x-circle fs-3"></i></div>
                <div class="fw-bold" id="stat-cancelled">-</div>
                <small class="text-muted">Đã hủy</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-secondary mb-2"><i class="bi bi-hourglass-split fs-3"></i></div>
                <div class="fw-bold" id="stat-expired">-</div>
                <small class="text-muted">Hết hạn</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="text-info mb-2"><i class="bi bi-cash-coin fs-3"></i></div>
                <div class="fw-bold small" id="stat-revenue">-</div>
                <small class="text-muted">Doanh thu</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-3">
                <input type="text" name="SearchTerm" class="form-control" placeholder="Tìm mã, trạm..." value="@filter?.SearchTerm" />
            </div>
            <div class="col-md-2">
                <select name="Status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="0" selected="@(filter?.Status == BookingStatus.Pending)">Chờ xác nhận</option>
                    <option value="1" selected="@(filter?.Status == BookingStatus.Confirmed)">Đã xác nhận</option>
                    <option value="2" selected="@(filter?.Status == BookingStatus.Completed)">Hoàn thành</option>
                    <option value="3" selected="@(filter?.Status == BookingStatus.Cancelled)">Đã hủy</option>
                    <option value="4" selected="@(filter?.Status == BookingStatus.Expired)">Hết hạn</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="Type" class="form-select">
                    <option value="">Tất cả loại</option>
                    <option value="1" selected="@(filter?.Type == BookingType.QuickHold)">Giữ chỗ nhanh</option>
                    <option value="2" selected="@(filter?.Type == BookingType.Reservation)">Đặt lịch trước</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="date" name="FromDate" class="form-control" value="@filter?.FromDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <input type="date" name="ToDate" class="form-control" value="@filter?.ToDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã booking</th>
                        <th>Khách hàng</th>
                        <th>Trạm sạc</th>
                        <th>Cổng</th>
                        <th>Thời gian</th>
                        <th>Loại</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Tiền cọc</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Bookings.Any())
                    {
                        @foreach (var item in Model.Bookings)
                        {
                            <tr>
                                <td>
                                    <span class="font-monospace small">@item.Code</span>
                                    <br />
                                    <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td>
                                    <div>@item.DriverName</div>
                                    <small class="text-muted">@item.DriverEmail</small>
                                </td>
                                <td>@item.StationName</td>
                                <td>
                                    <span class="badge bg-secondary">@item.ChargerType</span>
                                    Cổng #@item.PortIndex
                                </td>
                                <td>
                                    <div class="small">
                                        <div><i class="bi bi-calendar-event"></i> @item.StartAtUtc.ToLocalTime().ToString("dd/MM HH:mm")</div>
                                        <div><i class="bi bi-arrow-right"></i> @item.EndAtUtc.ToLocalTime().ToString("dd/MM HH:mm")</div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Type == BookingType.QuickHold)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-lightning-charge"></i> Nhanh</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info"><i class="bi bi-calendar-event"></i> Đặt trước</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case BookingStatus.Pending:
                                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                            break;
                                        case BookingStatus.Confirmed:
                                            <span class="badge bg-primary">Chờ xác nhận</span>
                                            break;
                                        case BookingStatus.Completed:
                                            <span class="badge bg-success">Hoàn thành</span>
                                            break;
                                        case BookingStatus.Cancelled:
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        case BookingStatus.Expired:
                                            <span class="badge bg-secondary">Hết hạn</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (item.PaymentStatus)
                                    {
                                        case PaymentStatus.Paid:
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Đã thanh toán</span>
                                            break;
                                        case PaymentStatus.Failed:
                                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Thất bại</span>
                                            break;
                                        case PaymentStatus.Expired:
                                            <span class="badge bg-secondary"><i class="bi bi-hourglass"></i> Hết hạn</span>
                                            break;
                                        default:
                                            <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Chờ thanh toán</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">
                                    <strong>@item.DepositAmount.ToString("N0")₫</strong>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1"></i>
                                <div>Không có dữ liệu</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @{
                var currentParams = new Dictionary<string, string>();
                if (!string.IsNullOrEmpty(filter?.SearchTerm))
                    currentParams["SearchTerm"] = filter.SearchTerm;
                if (filter?.Status.HasValue == true)
                    currentParams["Status"] = ((int)filter.Status.Value).ToString();
                if (filter?.Type.HasValue == true)
                    currentParams["Type"] = ((int)filter.Type.Value).ToString();
                if (filter?.FromDate.HasValue == true)
                    currentParams["FromDate"] = filter.FromDate.Value.ToString("yyyy-MM-dd");
                if (filter?.ToDate.HasValue == true)
                    currentParams["ToDate"] = filter.ToDate.Value.ToString("yyyy-MM-dd");
            }

            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-all-route-data="currentParams">Trước</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-route-pageNumber="@i" asp-all-route-data="currentParams">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-all-route-data="currentParams">Sau</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        // Load stats
        fetch('/Admin/BookingManagement/Stats')
            .then(r => r.json())
            .then(data => {
                document.getElementById('stat-pending').textContent = data.pendingCount;
                document.getElementById('stat-confirmed').textContent = data.confirmedCount;
                document.getElementById('stat-completed').textContent = data.completedCount;
                document.getElementById('stat-cancelled').textContent = data.cancelledCount;
                document.getElementById('stat-expired').textContent = data.expiredCount;
                document.getElementById('stat-revenue').textContent = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(data.todayRevenue);
            });
    </script>
}