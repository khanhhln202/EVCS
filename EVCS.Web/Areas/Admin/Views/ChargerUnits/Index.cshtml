@using EVCS.Services.DTOs
@model EVCS.Web.ViewModels.PagedResult
@{
    var items = (IEnumerable<ChargerUnitUpsertDto>)ViewBag.Items; var stationId = (Guid)ViewBag.StationId; ViewData["Title"] = "Thiết bị sạc";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create" asp-route-stationId="@stationId"><i class="bi bi-plus-lg"></i> Thêm thiết bị</a>
</div>
@if (!items.Any())
{
    <div class="alert alert-info"><i class="bi bi-info-circle"></i> Chưa có thiết bị. Hãy tạo mới.</div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead><tr><th>Tên</th><th>Loại</th><th>kW tối đa</th><th>Trạng thái</th><th class="text-end">Hành động</th></tr></thead>
            <tbody>
                @foreach (var c in items)
                {
                    <tr>
                        <td class="text-truncate-1" title="@c.Name">@c.Name</td>
                        <td>@c.Type</td>
                        <td>@c.MaxPowerKw</td>
                        <td><span class="badge @(c.Status == EVCS.Models.Enums.ChargerStatus.Online ? "text-bg-success" : "text-bg-secondary")">@c.Status</span></td>
                        <td class="text-end">
                            <a class="btn btn-outline-primary btn-sm" asp-area="Admin" asp-controller="ConnectorPorts" asp-action="Index" asp-route-chargerId="@c.Id"><i class="bi bi-plug"></i> Cổng</a>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@c.Id"><i class="bi bi-pencil"></i> Sửa</a>
                            <form id="form-del-@c.Id" asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@c.Id" />
                                <input type="hidden" name="stationId" value="@stationId" />
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-form="form-del-@c.Id"><i class="bi bi-trash"></i> Xoá</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
}
@await Html.PartialAsync("_ConfirmDeleteModal")