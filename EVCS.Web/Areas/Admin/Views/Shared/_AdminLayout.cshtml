@using Microsoft.AspNetCore.Identity
@inject SignInManager<EVCS.Models.Identity.ApplicationUser> SignInManager
@inject UserManager<EVCS.Models.Identity.ApplicationUser> UserManager
@{
    var title = ViewData["Title"] as string ?? "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="vi" data-bs-theme="auto">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title – EVCS Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body>
    @await Html.PartialAsync("_Navbar")

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block bg-light sidebar position-sticky" style="top: 0; height: 100vh;">
                <div class="pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Stations" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Stations" asp-action="Index">
                                <i class="bi bi-ev-station"></i> Trạm sạc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "BookingManagement" ? "active" : "")"
                               asp-area="Admin" asp-controller="BookingManagement" asp-action="Index">
                                <i class="bi bi-calendar-check"></i> Quản lý đặt chỗ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "BookingPolicy" ? "active" : "")" 
                               asp-area="Admin" asp-controller="BookingPolicy" asp-action="Index">
                                <i class="bi bi-shield-check"></i> Chính sách
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Notification -->
    @await Html.PartialAsync("_Notification")

    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>