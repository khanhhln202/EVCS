@model StationUpsertDto
@{
    ViewData["Title"] = "Create Station";
}
<h2 class="mb-3"><i class="bi bi-geo-alt"></i> Create Station</h2>
<partial name="_ValidationSummary" />
<form asp-action="Create" method="post" class="mt-3">
    <partial name="_Form" />
    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary"><i class="bi bi-check2"></i> Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}