@model IEnumerable<StationListAdminDto>
@{
    ViewData["Title"] = "Stations";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Stations</h2>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg"></i> New Station</a>
</div>


<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">
    @foreach (var s in Model)
    {
        <div class="col">
            <div class="card card-hover shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title mb-1">@s.Name</h5>
                            <div class="text-muted small">Code: <strong>@s.Code</strong> · @s.City</div>
                        </div>
                        <span class="badge @(s.Online ? "bg-success" : "bg-secondary")">@(s.Online ? "Online" : "Offline")</span>
                    </div>
                    <div class="mt-3 d-flex gap-3">
                        <div class="small text-muted"><i class="bi bi-cpu"></i> Chargers<br /><strong>@s.Chargers</strong></div>
                        <div class="small text-muted"><i class="bi bi-plug"></i> Ports<br /><strong>@s.Ports</strong></div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 d-flex gap-2">
                    <a asp-area="Admin" asp-controller="ChargerUnits" asp-action="Index" asp-route-stationId="@s.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-hdd-stack"></i> Manage Chargers</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                    <form asp-action="Delete" method="post" class="ms-auto" onsubmit="return confirm('Delete this station?');">
                        <input type="hidden" name="id" value="@s.Id" />
                        <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>