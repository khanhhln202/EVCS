@model IEnumerable<ConnectorPortUpsertDto>
@{
    ViewData["Title"] = "Ports"; var chargerId = (Guid)ViewBag.ChargerId;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Ports</h2>
    <a class="btn btn-primary" asp-action="Create" asp-route-chargerId="@chargerId"><i class="bi bi-plus-lg"></i> New Port</a>
</div>
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr><th>#</th><th>Type</th><th class="text-end">Max kW</th><th class="text-end">Price/kWh</th><th>Status</th><th class="text-end"></th></tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.IndexNo</td>
                        <td>@p.ConnectorType</td>
                        <td class="text-end">@p.MaxPowerKw</td>
                        <td class="text-end">@p.DefaultPricePerKwh.ToString("N0") ₫</td>
                        <td><span class="badge @(p.Status == EVCS.Models.Enums.ConnectorPortStatus.Available ? "bg-success" : "bg-secondary")">@p.Status</span></td>
                        <td class="text-end">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil"></i></a>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete port?');">
                                <input type="hidden" name="id" value="@p.Id" />
                                <input type="hidden" name="chargerId" value="@chargerId" />
                                <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>