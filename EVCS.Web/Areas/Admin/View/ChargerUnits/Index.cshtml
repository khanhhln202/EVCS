@model IEnumerable<ChargerUnitUpsertDto>
@{
    ViewData["Title"] = "Chargers"; var stationId = (Guid)ViewBag.StationId;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Chargers</h2>
    <a class="btn btn-primary" asp-action="Create" asp-route-stationId="@stationId"><i class="bi bi-plus-lg"></i> New Charger</a>
</div>
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr><th>Name</th><th>Type</th><th class="text-end">Max kW</th><th>Status</th><th class="text-end"></th></tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.Type</td>
                        <td class="text-end">@c.MaxPowerKw</td>
                        <td><span class="badge @(c.Status == EVCS.Models.Enums.ChargerStatus.Online ? "bg-success" : "bg-secondary")">@c.Status</span></td>
                        <td class="text-end">
                            <a class="btn btn-outline-primary btn-sm" asp-area="Admin" asp-controller="ConnectorPorts" asp-action="Index" asp-route-chargerId="@c.Id"><i class="bi bi-plug"></i> Ports</a>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@c.Id"><i class="bi bi-pencil"></i></a>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete charger?');">
                                <input type="hidden" name="id" value="@c.Id" />
                                <input type="hidden" name="stationId" value="@stationId" />
                                <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>