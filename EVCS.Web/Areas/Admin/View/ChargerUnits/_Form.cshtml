@model ChargerUnitUpsertDto
<input type="hidden" asp-for="StationId" />
<div class="row g-3">
    <div class="col-md-6">
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <label asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>
    <div class="col-md-3">
        <div class="form-floating">
            <select asp-for="Type" class="form-select">
                <option value="">(None)</option>
                <option>AC</option>
                <option>DC</option>
            </select>
            <label asp-for="Type"></label>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-floating">
            <input asp-for="MaxPowerKw" class="form-control" placeholder="0" />
            <label asp-for="MaxPowerKw"></label>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-floating">
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<EVCS.Models.Enums.ChargerStatus>()" class="form-select"></select>
            <label asp-for="Status"></label>
        </div>
    </div>
    <input type="hidden" asp-for="RowVersion" />
</div>